{
  "name": "wpdigger/wpjarvis-core",
  "description": "Laravel-style MVC framework for building modern WordPress plugins.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "WPDigger Studio",
      "email": "you@example.com"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "autoload": {
    "psr-4": {
      "WPJarvis\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPJarvis\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-autoload-dump": [
      "@php artisan clear-compiled || true"
    ]
  }
}
